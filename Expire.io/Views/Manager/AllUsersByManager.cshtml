
@{
    ViewData["Title"] = "AllUsersByManager";
}
@model System.Collections.Generic.IEnumerable<Expire.io.DTOs.UserForManagerDTO>
@using  Expire.io.DTOs;
@using Microsoft.AspNet.Identity

<div class="container" style="margin-top: 50px">
    <ul class="list-group list-group-flush">
        @{
            foreach (Expire.io.DTOs.UserForManagerDTO item in @Model)
            {
                <li class="list-group-item list-group-item-secondary allUsersList" id="@item.Id" style="border-radius: 5px;">
                    <div class="bmd-list-group-col" style="display: inline !important; ">
                        <div style="width: 65%; display: inline-block">
                            <p class="list-group-item-heading userNameParagraph" style="font-size: 20px;font-weight: bold" >@item.UserName</p>
                        </div>
                        <div style="width: 30%; display: inline-block; vertical-align: top">
                            <div class="row">
                                <button type="button" onclick="location.href = '@Url.Action("GetAllDocumentsByUser", "Document", new {userName = @item.UserName})'" class="btn btn-secondary giveToManager ml-auto">All documents</button>
                                <button type="button" onclick="location.href = '@Url.Action("GetExpiredDocumentsByUser", "Document", new {userName = @item.UserName})'" class="btn btn-danger ml-auto" style="margin-top: 7px">Expired documents</button>
                            </div>
                        </div>
                    </div>
                </li>
            }
        }
    </ul>
</div>

